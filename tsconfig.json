{
  "compilerOptions": {
      /* We need to stick to es5 since our project uses es5 */ 
      "target": "es2015", /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', or 'ESNEXT'. */
      "module": "commonjs", /* Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', or 'ESNext'. */

      "declaration": true, /* Generates corresponding '.d.ts' file. */
      "sourceMap": true, /* Generates corresponding '.map' file. */
      "outDir": "dist", /* Redirect output structure to the directory. */

      "strict": true, /* Enable all strict type-checking options. */
      "noImplicitReturns": true,/* Firebase's default lint options make these pretty required */
      "noUnusedLocals": true,/* Firebase's default lint options make these pretty required */
      
      "moduleResolution": "node", /* Specify module resolution strategy: 'node' (Node.js) or 'classic' (TypeScript pre-1.6). */
  },
  "compileOnSave": true,
  "include": [
      "src/**/*",
  ],
  "exclude": [
      "node_modules",
  ]
}
